FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

ENV NEXT_TELEMETRY_DISABLED=1
ENV AUTH_TRUST_HOST=true
ARG NEXTAUTH_URL
ARG NEXT_PUBLIC_API_URL
ARG AUTH_SECRET
ENV NEXTAUTH_URL=$NEXTAUTH_URL
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV AUTH_SECRET=$AUTH_SECRET

RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]
